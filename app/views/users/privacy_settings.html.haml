- content_for :page_title do
  = t('.title')

.bootstrap_header_padding

.container
  .row-fluid
    .span12
      #section_header
        %h2
          = t('privacy')
        = render 'shared/settings_nav'

  .row-fluid
    .span3
    .span5
      %h3
        = t('.ignored_users')

      - @blocks.each do |block|
        = block.person_name
        \-
        = link_to t('.stop_ignoring'), block_path(block),
          :method => :delete

      %h3
        = "Privacy policies"
      = form_for current_user, :url => user_path, :html => {:method => :put} do |f|
        = f.error_messages

        = f.label :show_community_spotlight_in_stream, :class => "checkbox" do
          = f.check_box :show_community_spotlight_in_stream
          = "Nobody can disclose my location"
        .small-horizontal-spacer
        = f.submit "Change", :class => "btn"
    .span3
